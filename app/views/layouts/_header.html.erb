<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "GIS toolkit", root_path, id: "logo" %>
    <nav>
      <ul id="links" class="nav navbar-nav navbar-right">
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "Map", root_path %></li>
        <% if admin? %>
          <li> <%= link_to "Cemeteries", cemeteries_path %> </li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Profile <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "View", current_user %></li>
              <li><%= link_to "Edit", edit_user_path(current_user) %></li>
              <li><%= link_to "Delete", current_user, method: "destroy_current", data: { confirm: "You sure?" } %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
